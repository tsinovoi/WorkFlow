<%= simple_form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
 <%= f.error_notification %>
  
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :admin, as: :boolean %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
